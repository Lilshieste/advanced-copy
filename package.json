{
	"name": "advanced-copy",
	"displayName": "Advanced Copy",
	"description": "Customizable copy to clipboard",
	"publisher": "Lilshieste",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.49.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "advanced-copy.copy-squished",
				"title": "Copy selected text, compressing all whitespace"
			},
			{
				"command": "advanced-copy.copy-without-newlines",
				"title": "Copy selected text, compressing newline characters"
			},
			{
				"command": "advanced-copy.copy-without-tabs",
				"title": "Copy selected text, compressing tab characters"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.49.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^14.0.27",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
